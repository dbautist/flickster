<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View"/>

    <variable
        name="movie"
        type="com.codepath.flickster.models.Movie"/>
  </data>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      android:padding="10dp">

    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="@dimen/background_width"
        android:layout_height="@dimen/background_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        tools:src="@drawable/movie_image_placeholder"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/movieImage"
        android:layout_alignRight="@+id/movieImage"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/play"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/movieImage"
        android:layout_toRightOf="@+id/movieImage"
        android:text="@{movie.originalTitle}"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_dark"
        tools:text="Captain America"/>

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleTextView"
        android:layout_below="@+id/titleTextView"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="@{movie.rating}"
        android:stepSize="0.1"
        android:visibility="@{movie.rating > 0 ? View.VISIBLE: View.GONE}"
        tools:rating="2.0"/>

    <TextView
        android:id="@+id/overviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleTextView"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="@{movie.overview}"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="We always knew they were coming back. Using recovered alien technology, the nations of Earth have collaborated on an immense defense program to protect the planet. But nothing can prepare us for the aliensâ€™ advanced and unprecedented force. Only the ingenuity of a few brave men and women can bring our world back from the brink of extinction."/>
  </RelativeLayout>
</layout>